{
    "name": "node-app-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "node -e \"const fs=require('fs'); fs.rmSync('dist',{recursive:true,force:true});\" && tsc && node -e \"const fs=require('fs'); fs.cpSync('media','dist/media',{recursive:true}); fs.cpSync('notifier-executables','dist/notifier-executables',{recursive:true});\"",
        "dev": "tsc --watch",
        "start": "node dist/index.js",
        "package": "node package-script.js"
    },
    "pkg": {
        "assets": [
            "notifier-executables/**/*",
            "media/**/*"
        ],
        "outputPath": "dist"
    },
    "author": "Joshua Silveous",
    "license": "ISC",
    "dependencies": {
        "node-notifier": "^10.0.1",
        "node-systray-v2": "github:Edgar-P-yan/node-systray-v2"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@types/node-notifier": "^8.0.5",
        "pkg": "^5.8.1",
        "resedit-cli": "^3.0.1",
        "typescript": "^5.9.3"
    }
}
